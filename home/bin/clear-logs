#!/bin/env bash
root="yes"
home="yes"
journalctl="yes"
reload="yes"
alllogshome="yes"
function cl-logs(){
if [ "$root" == "y" ] ;then
echo -e "[\e[1;33m!\e[0m] Checking if running in UUID=0"
	if [ $EUUID != '0' ]; then
		echo "RUN AS ROOT!!!!!"
	fi
	read -p "Sure : " ys
	echo -e "[\e[1;33m+\e[0m] Size of logs : $(journalctl --disk-usage )"
	echo -e "[\e[1;31m!\e[0m] Starting Cleaning logs..."
	journalctl --rotate
	rm -rf /var/log/journal/
	echo -e "[\e[1;34m+\e[0m] Cleaning logs is done-."	

fi
}
