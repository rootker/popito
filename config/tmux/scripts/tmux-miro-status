#!/bin/bash

# https://status.miro.com/api#status
MIRO_STATUS=$(curl -sS https://status.miro.com/api/v2/status.json| jq -r '.status.indicator')

INDICATIOR="#[fg=colour237]⦁"

case $MIRO_STATUS in
ma* | cri*)
	STATUS="#[fg=red]   $INDICATOR "
	;;
mi*)
	STATUS="#[fg=yellow]   $INDICATOR "
	;;
mai*)
	STATUS="#[fg=yellow]   $INDICATIOR "
	;;
*)
	STATUS=""
	;;
esac

printf "%s" "$STATUS"
